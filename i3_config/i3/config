    urgent_workspace   #FF5555 #FF5555 #F8F8F2
    binding_mode       #FF5555 #FF5555 #F8F8F2
  }
    status_command i3status --config ~/.config/i3status/i3status.conf
    separator_symbol "⫘"
}

